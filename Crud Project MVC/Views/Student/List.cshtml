@{
}

@model List<Student>

<h1>Student List</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>IsSubscribe</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.SubScribed</td>
                <td>
                    <a class="btn btn-info text-white me-2" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                    <a class="btn btn-danger text-white" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>