@{
}

@model Student

@if (Model is null)
{
    <p>No student was found with this Id</p>
}
else
{
    <h1>Edit Student</h1>
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Student Id : @Model.Id</label>
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input class="form-control" type="text" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Email</label>
            <input class="form-control" type="email" asp-for="Email" />
        </div>
        <div class="mt-3">
            <label class="form-label">Phone Number</label>
            <input class="form-control" type="text" asp-for="PhoneNumber" />
        </div>
        <div class="mt-3">
            <input class="form-check-input" type="checkbox" id="subscribed" asp-for="SubScribed" />
            <label class="form-label" for="subscribed">Subscribed</label>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}